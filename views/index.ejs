<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-eOJMYsd53ii+scO/bJGFsiCZc+5NDVN2yr8+0RDqr0Ql0h+rP48ckxlpbzKgwra6" crossorigin="anonymous">

    <title>Blog Site</title>
</head>

<body>
    <div class="container">
        <h1 class="mb-4 mt-4">Blog Articles</h1>
        <a href="/articles/new" class="btn btn-primary">Post Articles</a>

        <% articles.forEach(articles=> { %>
            <div class="card mt-4">
                <div class="card-body">
                    <h4 class="card-title">
                        <%= articles.title %>
                    </h4>
                    <div class="card-subtitle text-muted">
                        <%= articles.createdAt.toLocaleDateString() %>
                    </div>
                    <div class="card-text mb-2">
                        <%= articles.description %>
                    </div>
                    <a href="/articles/<%= articles.id %>" class="btn btn-primary">Read More</a>
                    <form action="/articles/<%= articles.id %>?_method=DELETE" method="POST" class="d-inline">
                        <button type="submit" class="btn btn-danger">Delete</button>
                    </form>
                </div>
            </div>
        <%})%>
    </div>
</body>

</html>